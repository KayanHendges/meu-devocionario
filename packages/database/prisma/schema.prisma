generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Category {
  id               String   @id @default(auto()) @map("_id") @db.ObjectId
  createdAt        DateTime @db.Date
  description      String?
  cleanDescription String?  @map("clean_description")
  name             String   @unique(map: "name_1")
  updatedAt        DateTime @db.Date

  @@map("categories")
}

model Prayer {
  id                  String       @id @default(auto()) @map("_id") @db.ObjectId
  title               String       @unique(map: "title_1")
  categoryId          String       @map("category_id")
  body                String
  cleanBody           String       @map("clean_body")
  cleanDescription    String       @map("clean_description")
  description         String
  language            LanguageCode @default(pt_BR)
  relatedCategoriesId String[]     @map("related_categories_id")
  updatedAt           DateTime     @db.Date
  createdAt           DateTime     @db.Date

  @@map("prayers")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String   @unique
  name      String
  role      UserRole @default(user)
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model UserCredential {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  password  String?
  googleId  String?  @map("google_id")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("user_credentials")
}

enum UserRole {
  admin
  moderator
  user
}

enum LanguageCode {
  pt_BR
  la
}
